{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capability for mdash",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-set-title",
    "core:event:default",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-watch",
    "fs:allow-unwatch",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "**" }]
    },
    "cli:default",
    "cli:allow-cli-matches",
    "dialog:default",
    "dialog:allow-open"
  ]
}
